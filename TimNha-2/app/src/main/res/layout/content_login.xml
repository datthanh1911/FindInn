<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sony.timnha.Login"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:src="@drawable/icon_login1"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:hint="Tên Đăng Nhập"
            android:id="@+id/LogUser" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:hint="Mật Khẩu"
            android:id="@+id/LogPass" />

        <CheckBox
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Ghi Nhớ"
            android:id="@+id/LogCheckBox"
            android:checked="false"
            android:layout_gravity="center"/>



            <ImageButton
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:id="@+id/LogBntDn"
                android:background="@drawable/bnt_login"
                android:layout_gravity="center_horizontal"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Đăng Ký Tài Khoản"
            android:id="@+id/LogbntDKTK"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


</RelativeLayout>
